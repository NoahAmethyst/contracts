contract Permission {
    address public owner;
    mapping(address => bool) public operators;
    modifier onlyOperator(){
        require(operators[msg.sender], "Only Operator");
        _;
    }

    modifier onlyOwner(){
        require(msg.sender == owner, "Only Owner");
        _;
    }

    function transferOwner(address _newOwner) public onlyOwner {
        operators[owner] = false;
        owner = _newOwner;
        operators[_newOwner] = true;
    }

    function addOperator(address _newOperator) public onlyOwner {
        operators[_newOperator] = true;
    }

    function delOperator(address _removeOperator) public onlyOwner {
        operators[_removeOperator] = false;
    }

}

contract AwardData is Permission {
    using SafeMath for uint256;

    constructor(){
        owner = msg.sender;
        addOperator(msg.sender);
    }

    struct AwardPool {
        IERC20 token;
        bool isETH;
        bool isNFT;
        IERC721 nft;
        uint256 awardCount;
        uint256[] nftIds;
    }


    mapping(uint256 => AwardPool[]) public awardPools;
    mapping(uint256 => address) public poolCreator;
    mapping(uint256 => bool) public overPools;
    mapping(uint256 => bool) public existPools;
    mapping(string => uint256[]) public appPools;


    function setAwardPools(string memory _appId, uint256 _id, AwardPool[] memory _pools, address _creator) public onlyOperator {
        for (uint i = 0; i < _pools.length; i++) {
            awardPools[_id].push(_pools[i]);
        }
        poolCreator[_id] = _creator;
        existPools[_id] = true;
        appPools[_appId].push(_id);
    }

    function getAwardPools(uint256 _id) public view returns (AwardPool[] memory){
        return awardPools[_id];
    }

    function getPoolCreator(uint256 _id) public view returns (address){
        return poolCreator[_id];
    }

    function overPool(uint256 _id) public onlyOperator {
        overPools[_id] = true;
    }

    function checkIsOver(uint256 _id) public view returns (bool){
        return overPools[_id];
    }

    function checkIsExist(uint256 _id) public view returns (bool){
        return existPools[_id];
    }

    function checkBelongApp(string memory _appId, uint256 _id) public view returns (bool){
        bool exist = false;
        for (uint i = 0; i < appPools[_appId].length; i++) {
            if (appPools[_appId][i] == _id) {
                exist = true;
            }
        }

        return exist;
    }

    function getAppPools(string memory _appId) public view returns (uint256[] memory){
        return appPools[_appId];
    }


}